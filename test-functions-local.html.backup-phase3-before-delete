    <script>
        function testLocalJS() {
            const resultDiv = document.getElementById('local-result');
            resultDiv.style.display = 'block';
            
            try {
                // Test basic JavaScript functionality
                const testData = {
                    timestamp: new Date().toISOString(),
                    userAgent: navigator.userAgent,
                    protocol: window.location.protocol,
                    hostname: window.location.hostname,
                    pathname: window.location.pathname
                };
                
                resultDiv.className = 'result success';
                resultDiv.innerHTML = `
                    <strong>‚úÖ Local JavaScript Working!</strong><br>
                    <strong>Protocol:</strong> ${testData.protocol}<br>
                    <strong>Hostname:</strong> ${testData.hostname}<br>
                    <strong>Pathname:</strong> ${testData.pathname}<br>
                    <strong>User Agent:</strong> ${testData.userAgent.substring(0, 50)}...<br>
                    <strong>Timestamp:</strong> ${testData.timestamp}
                `;
            } catch (error) {
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `
                    <strong>‚ùå JavaScript Error</strong><br>
                    <strong>Error:</strong> ${error.message}
                `;
            }
        }

        function testResponseCenter() {
            const resultDiv = document.getElementById('response-center-result');
            resultDiv.style.display = 'block';
            
            try {
                // Check if response center file exists
                const responseCenterPath = 'app/response-center.html';
                
                resultDiv.className = 'result success';
                resultDiv.innerHTML = `
                    <strong>‚úÖ Response Center File Found!</strong><br>
                    <strong>Path:</strong> ${responseCenterPath}<br>
                    <strong>Status:</strong> File exists locally<br>
                    <strong>Note:</strong> Full functionality requires Netlify deployment<br>
                    <strong>Next:</strong> Deploy to Netlify to test AI functions
                `;
            } catch (error) {
                resultDiv.className = 'result error';
                resultDiv.innerHTML = `
                    <strong>‚ùå Response Center Error</strong><br>
                    <strong>Error:</strong> ${error.message}
                `;
            }
        }

        function testMockDocumentGeneration() {
            const resultDiv = document.getElementById('mock-result');
            resultDiv.style.display = 'block';
            
            // Simulate document generation without backend
            const mockDocuments = [
                { name: 'Claim Response Letter', type: 'Response', date: '2025-01-27' },
                { name: 'Evidence Package', type: 'Evidence', date: '2025-01-27' },
                { name: 'Policy Analysis', type: 'Analysis', date: '2025-01-27' }
            ];
            
            resultDiv.className = 'result success';
            resultDiv.innerHTML = `
                <strong>‚úÖ Mock Document Generation Working!</strong><br>
                <strong>Generated Documents:</strong><br>
                ${mockDocuments.map(doc => `‚Ä¢ ${doc.name} (${doc.type}) - ${doc.date}`).join('<br>')}<br><br>
                <strong>Note:</strong> This is a mock test. Real document generation requires Netlify functions.
            `;
        }
    </script>
