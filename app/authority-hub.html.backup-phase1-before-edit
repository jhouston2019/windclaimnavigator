  <script>
    async function loadData() {
      try {
        // Load states
        const statesRes = await fetch('/data/states.json');
        const states = await statesRes.json();

        const statesDiv = document.getElementById('states');
        states.forEach(state => {
          const card = document.createElement('a');
          card.href = `/app/state-guides/${state.abbr}.html`;
          card.className = 'card';
          card.innerHTML = `
            <h3>${state.state}</h3>
            <p>${state.abbr} • ${state.deadline} deadline</p>
          `;
          statesDiv.appendChild(card);
        });

        // Load pillars
        const pillarsRes = await fetch('/data/pillars.json');
        const pillars = await pillarsRes.json();

        const pillarsDiv = document.getElementById('pillars');
        pillars.forEach(pillar => {
          const card = document.createElement('a');
          card.href = `/app/pillar-guides/${pillar.slug}.html`;
          card.className = 'card pillar-card';
          card.innerHTML = `
            <h3>${pillar.title}</h3>
            <p>${pillar.desc.substring(0, 100)}...</p>
          `;
          pillarsDiv.appendChild(card);
        });

      } catch (error) {
        console.error('Error loading data:', error);
        document.getElementById('states').innerHTML = '<p style="color: #ef4444 !important;">Error loading state guides. Please refresh the page.</p>';
        document.getElementById('pillars').innerHTML = '<p style="color: #ef4444 !important;">Error loading pillar guides. Please refresh the page.</p>';
      }
    }

    loadData();
  </script>
