<script type="module">
  import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js/+esm'

  const supabase = createClient(
    "{{ SUPABASE_URL }}",
    "{{ SUPABASE_ANON_KEY }}"
  );

  async function loadUserData() {
    const loading = document.getElementById("loading");
    const content = document.getElementById("receipt-content");
    const errorBox = document.getElementById("error-message");
    const errorText = document.getElementById("error-text");

    loading.classList.add("active");

    try {
      // Ensure logged in
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) throw new Error("You must log in to view your receipt.");

      // Get Stripe session ID from URL
      const urlParams = new URLSearchParams(window.location.search);
      const sessionId = urlParams.get("session_id");
      if (!sessionId) throw new Error("No session_id found in URL.");

      // Fetch session details from Netlify
      const res = await fetch("/.netlify/functions/get-checkout-session-details", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ session_id: sessionId }),
      });

      const session = await res.json();
      if (!res.ok) throw new Error(session.error || "Failed to fetch receipt.");

      // Fill receipt UI
      document.getElementById("order-id").textContent = session.id;
      document.getElementById("purchase-date").textContent = new Date(session.created).toLocaleDateString();
      document.getElementById("product-name").textContent = session.product;
      document.getElementById("amount-paid").textContent = `$${session.amount_total}`;

      // Fetch credits from Supabase with proper authentication
      const creditRes = await fetch("/.netlify/functions/verify-entitlement", {
        method: "POST",
        headers: { 
          "Content-Type": "application/json",
          "Authorization": `Bearer ${(await supabase.auth.getSession()).data.session?.access_token}`
        },
        body: JSON.stringify({ email: user.email })
      });

      const creditData = await creditRes.json();
      if (!creditRes.ok) throw new Error(creditData.error || "Failed to fetch credits.");

      document.getElementById("credits-count").textContent = creditData.credits;

      content.style.display = "block";
    } catch (err) {
      console.error(err);
      errorText.textContent = err.message;
      errorBox.classList.add("active");
      content.style.display = "block";
    } finally {
      loading.classList.remove("active");
    }
  }

  document.addEventListener("DOMContentLoaded", loadUserData);
</script>

<script type="module" src="/app/assets/js/diagnostics.js"></script>
