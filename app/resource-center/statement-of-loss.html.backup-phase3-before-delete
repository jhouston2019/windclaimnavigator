  <!-- Add Entry Modal -->
  <div class="modal" id="add-modal">
    <div class="modal-content">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
        <h3 style="margin: 0; color: #ffffff !important;">Add Transaction</h3>
        <button class="btn btn-secondary" onclick="closeModal()" style="padding: 0.5rem 1rem;">&times;</button>
      </div>
      <form id="add-form" onsubmit="submitAddEntry(event)">
        <div class="form-group">
          <label>Entry Type</label>
          <select id="entry-type" required>
            <option value="">Select type...</option>
