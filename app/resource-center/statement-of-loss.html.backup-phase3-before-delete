  <script>
    const claim_id = localStorage.getItem('claim_id') || new URLSearchParams(window.location.search).get('claim_id') || 'TEST-CLAIM';

    async function refresh() {
      try {
        const res = await fetch(`/.netlify/functions/get-transactions?claim_id=${claim_id}`);
        const data = await res.json();

        if (data.status === 'error') {
          throw new Error(data.error);
        }

        const transactions = data.transactions || [];
        const totals = data.totals || {};

        // Update ledger table
        const tbody = document.getElementById('ledger-body');
        if (transactions.length === 0) {
          tbody.innerHTML = '<tr><td colspan="6" class="empty-state">No transactions yet. Click "Add Entry" to get started.</td></tr>';
        } else {
          tbody.innerHTML = transactions.map(txn => {
            const date = new Date(txn.date).toLocaleDateString();
            const amount = parseFloat(txn.amount) || 0;
            const balance = parseFloat(txn.running_balance) || 0;
            return `
              <tr>
                <td>${date}</td>
                <td>${txn.entry_type}</td>
                <td>${txn.description}</td>
                <td>${txn.source || '-'}</td>
                <td>$${amount.toFixed(2)}</td>
                <td>$${balance.toFixed(2)}</td>
              </tr>
            `;
          }).join('');
        }

        // Update totals
        document.getElementById('total-payments').textContent = `$${(parseFloat(totals.total_payments) || 0).toFixed(2)}`;
        document.getElementById('total-invoices').textContent = `$${(parseFloat(totals.total_invoices) || 0).toFixed(2)}`;
        document.getElementById('total-expenses').textContent = `$${(parseFloat(totals.total_expenses) || 0).toFixed(2)}`;
        document.getElementById('total-supplements').textContent = `$${(parseFloat(totals.total_supplements) || 0).toFixed(2)}`;
        document.getElementById('total-depreciation').textContent = `$${(parseFloat(totals.total_depreciation) || 0).toFixed(2)}`;
        document.getElementById('total-all').textContent = `$${(parseFloat(totals.total_all) || 0).toFixed(2)}`;

      } catch (error) {
        console.error('Error refreshing:', error);
        document.getElementById('ledger-body').innerHTML = 
          `<tr><td colspan="6" class="empty-state">Error loading transactions: ${error.message}</td></tr>`;
      }
    }

    function openModal() {
      document.getElementById('add-modal').classList.add('active');
      document.getElementById('entry-date').value = new Date().toISOString().split('T')[0];
    }

    function closeModal() {
      document.getElementById('add-modal').classList.remove('active');
      document.getElementById('add-form').reset();
    }

    async function submitAddEntry(event) {
      event.preventDefault();
      
      const entryData = {
        claim_id: claim_id,
        entry_type: document.getElementById('entry-type').value,
        description: document.getElementById('description').value,
        source: document.getElementById('source').value || null,
        amount: document.getElementById('amount').value,
        date: document.getElementById('entry-date').value || new Date().toISOString()
      };

      try {
        const res = await fetch('/.netlify/functions/add-transaction', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(entryData)
        });

        const data = await res.json();
        
        if (data.status === 'error') {
          throw new Error(data.error);
        }

        closeModal();
        refresh();
      } catch (error) {
        alert('Error adding entry: ' + error.message);
      }
    }

    async function exportPDF() {
      try {
        const email = prompt('Enter email to send PDF (optional, leave blank to skip):');
        const res = await fetch('/.netlify/functions/generate-statement-of-loss', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            claim_id: claim_id,
            to_email: email || null
          })
        });

        const data = await res.json();
        
        if (data.status === 'error') {
          throw new Error(data.error);
        }

        if (data.pdf_url) {
          window.open(data.pdf_url, '_blank');
        }
        
        alert('PDF generated and stored' + (email ? ' and emailed!' : '!'));
      } catch (error) {
        alert('Error generating PDF: ' + error.message);
      }
    }

    // Event listeners
    document.getElementById('add-btn').addEventListener('click', openModal);
    document.getElementById('refresh-btn').addEventListener('click', refresh);
    document.getElementById('export-btn').addEventListener('click', exportPDF);

    // Initial load
    refresh();
  </script>
</body>
</html>
